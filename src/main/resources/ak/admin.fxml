<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ak.ui.AdminController">
    <children>
        <Label text="Admin Dashboard" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
        
        <!-- Buttons for adding loans, accounts, and transactions -->
        <Button text="Add Account" onAction="#handleAddAccount" />
        <Button text="Add Transaction" onAction="#handleAddTransaction" />
        <Button text="Add Loan" onAction="#handleAddLoan" />
        <Button text="Review Loan Requests" onAction="#handleReviewLoanRequests" />
        
        <!-- Button to view all customers -->
        <Button text="View All Customers" onAction="#handleViewCustomers" />
        <TableView fx:id="customersTable" prefWidth="800" style="-fx-font-size: 14px;">
            <columns>
                <TableColumn text="Customer ID" fx:id="customerIdColumn" prefWidth="200" />
                <TableColumn text="Name" fx:id="customerNameColumn" prefWidth="300" />
                <TableColumn text="Email" fx:id="customerEmailColumn" prefWidth="300" />
            </columns>
        </TableView>
        
        <!-- Button to view all accounts -->
        <Button text="View All Accounts" onAction="#handleViewAccounts" />
        <TableView fx:id="accountsTable" prefWidth="800" style="-fx-font-size: 14px;">
            <columns>
                <TableColumn text="Account Number" fx:id="accountNumberColumn" prefWidth="200" />
                <TableColumn text="Account Type" fx:id="accountTypeColumn" prefWidth="300" />
                <TableColumn text="Balance" fx:id="accountBalanceColumn" prefWidth="300" />
            </columns>
        </TableView>
        
        <!-- Logout button -->
        <Button text="Log Out" onAction="#handleLogout" />
    </children>
</VBox>